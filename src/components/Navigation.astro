---
import { ViewAPI } from '../lib/services/mockViewAPI';
import type { ANSNavigationItem, NavigationAPIResponse } from '../lib/types/ans';

// Fetch navigation data
const api = ViewAPI.getInstance();
const navigationResponse = await api.getNavigationById('main-nav');
---

<nav class="bg-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between h-16">
      <div class="flex">
        <a href="/" class="flex items-center">
          <span class="text-xl font-bold text-gray-800">News Site</span>
        </a>
        <div class="hidden md:flex items-center space-x-4 ml-8">
          {navigationResponse && navigationResponse.navigation.items.map((item: ANSNavigationItem) => (
            <a 
              href={item.url} 
              class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium"
            >
              {item.display_name}
            </a>
          ))}
        </div>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/search" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Search</a>
      </div>
    </div>
  </div>
</nav>
